mixin header(listLinkNavbar)
  header.header
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='#')
          img(src="./assets/images/logo_nct.png", alt="logo")
        #navbarNavDropdown.collapse.navbar-collapse
          ul.navbar-nav
            each item in listLinkNavbar
              li.nav-item
                - if (item.title === "phienbanmoi")
                  a.nav-link.text-primary(href='#') &num;phienbanmoi
                - else
                  a.nav-link(aria-current='page' href='#!')= item.title
          .header__search
            input(type='text' placeholder='Tìm kiếm')
            i.icon.fa-solid.fa-magnifying-glass
          .header__upload-icon
            img(src="./assets/images/nav-header/ic_store.png", alt="icon")
          .header__upload-icon
            img(src="./assets/images/nav-header/ic_upload.png", alt="icon")
          div.btn-login
            button.btn.btn-light.mx-3(type='button') Đăng nhập
            button.btn.btn-primary(type='button')  Đăng Ký
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon

